import java.util.Scanner;

public class dowhileloops {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        /* 
        syntax 
        do {
        block of statements 
        } while ();
        
        
        
        */
        
        
        
        int v;
        int count = 0;
        do{
            System.out.println("Enter a number");
            v = sc.nextInt();
            count++;
        }while(v != 10);

        System.out.println("you tried  " + count + " times");
    }
}
